{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "target": "es6",
    "outDir": "..",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "include": [
    "../src/api/**/*.ts",
    "../src/server.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}